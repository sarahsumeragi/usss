<div class="container">
  <div class="row">
    <div class="col-sm-5">
      <h2>仮設Twitt●r</h2>
      <p>
        課題用Twitt●rです。
        <p></p>
        <%=link_to"新規作成",new_blog_path,class:'btn btn-default btn-xs'%>
      </p>  
    </div>
    <div class="col-sm-7">
      <p><%= notice %></p>
      <h3>投稿一覧</h3>
      <% @blogs.each do |blog| %>
      <div class="row">
        <h4><strong><%=blog.title%></strong></h4>
        <p><%=blog.content%></p>
     <%=link_to"編集",edit_blog_path(blog.id),class:'btn btn-default btn-sm btn-info'%>
    <%=link_to"削除",blog_path(blog.id), method: :delete,data: { confirm: '本当に削除していいですか？' },class: 'btn btn-default btn-sm btn btn-danger' %>
   </div>
   <% end %>
  </div>
</div>